
@{
    ViewData["Title"] = "AddTask";
}
@model ChadCalendar.Models.Task

<form action="/task/addtask" method="post">
    <div class="form-group">
        <label>Enter hours</label>
        <input type="number" asp-for="HoursTakes" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57">
    </div>
    <div class="form-group">
        <label>Enter max per day times</label>
        <input type="number" placeholder="" asp-for="MaxPerDay" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57">
    </div>
    <div class="form-group">
        <label>Name of Task</label>
        <input type="text" placeholder="Name" asp-for="Name">
    </div>
    <div class="form-group">
        <label>Enter description</label>
        <textarea type="text" placeholder="Description" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <input type="checkbox" asp-for="AllowedToDistribute"><label>Задачу можно автоматически распределить</label><br>
    </div>
    <div class="form-group">
        <label>Enter deadline</label>
        <input type="datetime-local" asp-for="Deadline" />
    </div>
    <div class="form-group">
        <label>Enter repeats on week</label>
        <input type="number" asp-for="NRepetitions" onkeypress="return (event.charCode == 8 || event.charCode == 0 || event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 57">
    </div>
    <div class="form-group">
        <label>Повторять раз в </label>
        <select asp-for="Frequency">
            <option disabled>Частота</option>
            <option>день</option>
            <option>неделю</option>
            <option>месяц</option>
        </select>
    </div>
    <div class="form-group">
        <label>Выберите проект для задачи</label>
        <select asp-for="Project">
            @foreach (var proj in ViewBag.Projects)
            {
                <option>@proj.Name</option>
            }
        </select>
    </div>
    @if (!Model.IsCorrect())
    {
        <label>Введены некорректные данные, попробуйте еще раз</label>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

